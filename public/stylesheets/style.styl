@import 'inkwell'

$colors = scheme(#933 #393)
theme($colors)

body
  background $colors[5]

  .container
    width 600px
    margin 0 auto
    text-align center

    h1
      color $colors[4]
      text-shadow 1px 1px 0 $colors[7]
      font-size 48px
      font-family monospace
      vendor(font-smoothing, antialiased)

    #code
      width 100%
      height 200px
      asdf $colors
      border 0
      border-radius 4px
      box-shadow 1px 1px 0 $colors[7]

      &:focus
        outline none